module simple_register_sync_reset #(
    parameter W = 8
)(
    input              clk,
    input              reset,
    input  [W-1:0]      data_in,
    output reg [W-1:0]  data_out
);

always @(posedge clk) begin
    if (reset)
        data_out <= {W{1'b0}};   // Clear register
    else
        data_out <= data_in;     // Load data
end

endmodule
